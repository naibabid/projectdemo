pipeline {
  agent any
  
  stages {
      stage('Build Artifact') {
            steps {
              sh "mvn clean package -D skipTests=true"
              archive 'target/*.jar'
            }
      }
      stage('unittests - Junit and Jacoco') {
            steps {
              sh "mvn test"
            }
            post {
              always {
                junit 'target/surfire-reports/*.xml'
                jacoco execpattern: 'target/jacoco.exec'
              }
            }
      }      
  }
 } 
